<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/textBlanco"
    android:gravity="center"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="njdevelop.cl.especialistacliente.ResultadoActivity"
    tools:showIn="@layout/activity_resultado"
    android:orientation="vertical">
<ImageView
    android:layout_width="100sp"
    android:layout_height="100dp"
    android:src="@drawable/check"/>
    <njdevelop.cl.especialistacliente.TextViewCustom
        android:padding="10dp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textBlue"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:text="@string/textResultado"/>
    <ImageView
        android:id="@+id/imageqr"
        android:layout_margin="10dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/qr_img"/>
    <LinearLayout
        android:id="@+id/linearLayoutAceptar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shappe_button"
        android:orientation="vertical">
        <njdevelop.cl.especialistacliente.TextViewCustom
            android:layout_width="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:clickable="false"
            android:layout_height="wrap_content"
            android:textColor="@color/textBlue"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:text="Aceptar"/>
    </LinearLayout>
</LinearLayout>
